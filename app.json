{
  "expo": {
    "name": "BakuScan",
    "slug": "bakuscan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "bakuscan",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bakuscan.app",
      "infoPlist": {
        "NSCameraUsageDescription": "BakuScan needs camera access to scan and identify your Bakugan toys.",
        "NSPhotoLibraryUsageDescription": "BakuScan needs photo library access to scan Bakugan images from your gallery."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E63946",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.bakuscan.app",
      "permissions": ["android.permission.CAMERA"]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#E63946",
          "dark": {
            "backgroundColor": "#1A1A1A"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow BakuScan to access your camera to scan Bakugan toys."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow BakuScan to access your photos to scan Bakugan images."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
